  <ns0:recipeName>Gr&#252;nkohl mit Tofu</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>100 ml</ns0:igdtQuantity>
        <ns0:igdtName ref="sojasauce">Sojasauce</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>30 ml</ns0:igdtQuantity>
        <ns0:igdtName ref="ahornsirup">Ahornsirup</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>&#189;</ns0:igdtQuantity>
        <ns0:igdtName ref="zitrone">Zitrone(n), Saft davon</ns0:igdtName>
      </ns0:igdtListLine>
