        <ns0:igdtQuantity>300 g</ns0:igdtQuantity>
        <ns0:igdtName ref="tofu">Tofu</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>500 g</ns0:igdtQuantity>
        <ns0:igdtName ref="gr&#252;nkohl">Gr&#252;nkohl, TK</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>200 g</ns0:igdtQuantity>
        <ns0:igdtName ref="sahne">Pflanzendrink oder Sahneersatz</ns0:igdtName>
      </ns0:igdtListLine>
