  <ns0:recipeName>Gr&#252;ner Smoothie mit Salbei</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>2</ns0:igdtQuantity>
        <ns0:igdtName ref="apfel">&#196;pfel</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>0,3</ns0:igdtQuantity>
        <ns0:igdtName ref="gurke">Gurke(n)</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1</ns0:igdtQuantity>
        <ns0:igdtName ref="zitrone">Zitrone(n), den Saft davon</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>2 Handvoll</ns0:igdtQuantity>
        <ns0:igdtName ref="gr&#252;nkohl">Salat, Spinat, Mangold o.&#228;. frischer, oder TK-Spinat, TK-Gr&#252;nkohl o.&#228;. (dann eine kleine Tasse voll)</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 St&#252;ck(e)</ns0:igdtQuantity>
        <ns0:igdtName ref="ingwer">Ingwer</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>3 Bl&#228;tter</ns0:igdtQuantity>
        <ns0:igdtName ref="salbei">Salbei</ns0:igdtName>
      </ns0:igdtListLine>
