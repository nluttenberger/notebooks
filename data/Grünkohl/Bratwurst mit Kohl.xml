    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>8 St&#252;ck(e)</ns0:igdtQuantity>
        <ns0:igdtName ref="bratwurst">Bratwurst, rohe</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1</ns0:igdtQuantity>
