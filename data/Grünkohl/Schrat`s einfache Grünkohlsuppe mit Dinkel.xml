  <ns0:recipeName>Schrat`s einfache Gr&#252;nkohlsuppe mit Dinkel</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1.000 g</ns0:igdtQuantity>
