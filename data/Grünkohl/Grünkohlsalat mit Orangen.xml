        <ns0:igdtQuantity>25 g</ns0:igdtQuantity>
        <ns0:igdtName ref="pinienkerne">Pinienkerne</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>20 g</ns0:igdtQuantity>
