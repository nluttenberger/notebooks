  <ns0:recipeName>Green Smoothie Overnight Oats</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 Handvoll</ns0:igdtQuantity>
        <ns0:igdtName ref="gr&#252;nkohl">Spinat, tiefgek&#252;hlt, oder Gr&#252;nkohl</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1</ns0:igdtQuantity>
        <ns0:igdtName ref="banane">Banane(n), reif</ns0:igdtName>
      </ns0:igdtListLine>
