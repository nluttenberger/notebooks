  <ns0:recipeName>Gr&#252;ner, sehr gesunder Smoothie</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity />
        <ns0:igdtName ref="radieschen">Radieschenbl&#228;tter von einem Bund Radieschen</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity />
        <ns0:igdtName ref="kohlrabi">Kohlrabibl&#228;tter von einem Kohlrabi</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>150 g</ns0:igdtQuantity>
        <ns0:igdtName ref="gr&#252;nkohl">Gr&#252;nkohl, k&#252;chenfertig</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>200 g</ns0:igdtQuantity>
        <ns0:igdtName ref="brokkoli">Brokkoli</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>50 g</ns0:igdtQuantity>
        <ns0:igdtName ref="feldsalat">Feldsalat</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 kleine</ns0:igdtQuantity>
        <ns0:igdtName ref="banane">Banane(n), reif</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 gro&#223;er</ns0:igdtQuantity>
        <ns0:igdtName ref="apfel">Apfel, s&#252;&#223;</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>80 g</ns0:igdtQuantity>
        <ns0:igdtName ref="himbeeren">Himbeeren</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>750 ml</ns0:igdtQuantity>
        <ns0:igdtName ref="">Wasser, stilles</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>3 EL</ns0:igdtQuantity>
        <ns0:igdtName ref="ei">Lein&#246;l</ns0:igdtName>
      </ns0:igdtListLine>
