  <ns0:meta>
    <ns0:book>KochbuchHD</ns0:book>
    <ns0:chapter>06 Eier-, Milch- und Mehl-Speisen</ns0:chapter>
  </ns0:meta>
  <ns0:recipeName>Ein Pfannkuchen von gekochten, &#252;bergebliebenen Nudeln</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 Teller voll</ns0:igdtQuantity>
        <ns0:igdtName ref="nudeln">Nudeln</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 EL</ns0:igdtQuantity>
        <ns0:igdtName ref="weizenmehl">Mehl</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>3</ns0:igdtQuantity>
        <ns0:igdtName ref="ei">Eier</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>2 Tassen</ns0:igdtQuantity>
        <ns0:igdtName ref="milch">Milch</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity />
        <ns0:igdtName ref="">Salz</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>2 Loth</ns0:igdtQuantity>
        <ns0:igdtName ref="parmesan">Parmesank&#228;se</ns0:igdtName>
      </ns0:igdtListLine>
    </ns0:igdtList>
  </ns0:recipeIngredients>
  <ns0:recipeInstructions>
    <ns0:instruction>
      <ns0:instrStepName>Zubereitung</ns0:instrStepName>
      <ns0:instrStepText>Zu einem Teller voll Nudeln r&#252;hrt man einen E&#223;l&#246;ffel voll Mehl, 3 Eidotter, 2 Tassen voll Milch und Salz untereinander, das zu Schaum geschlagene Eiwei&#223; dazu, die Nudeln durchger&#252;hrt und wie Pfannkuchen gebacken. Zwei Loth Parmesank&#228;se oder auch gr&#252;ner Schweizerk&#228;se darunter gemischt schmeckt sehr gut. </ns0:instrStepText>
    </ns0:instruction>
  </ns0:recipeInstructions>
