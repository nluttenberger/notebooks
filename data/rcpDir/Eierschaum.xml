  <ns0:recipeName>Eierschaum</ns0:recipeName>
  <ns0:recipeKeywords />
  <ns0:recipeIntro />
  <ns0:recipeIngredients>
    <ns0:igdtList>
      <ns0:igdtListName />
      <ns0:igdtListLine>
        <ns0:igdtQuantity>8</ns0:igdtQuantity>
        <ns0:igdtName ref="ei">Eier</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1 Ma&#223;</ns0:igdtQuantity>
        <ns0:igdtName ref="milch">Milch</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>&#189; Tasse</ns0:igdtQuantity>
        <ns0:igdtName ref="rosenwasser">Rosenwasser</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
        <ns0:igdtQuantity>1</ns0:igdtQuantity>
        <ns0:igdtName ref="zitrone">Zitrone</ns0:igdtName>
      </ns0:igdtListLine>
      <ns0:igdtListLine>
